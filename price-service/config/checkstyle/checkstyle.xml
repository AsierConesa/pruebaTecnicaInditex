<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "config/checkstyle/configuration_1_3.dtd">

<module name="Checker">

    <!-- Ignorar el package-info.java -->
    <module name="JavadocPackageCheck"/>

    <!-- Evitar errores por tabulaciones -->
    <module name="FileTabCharacterCheck">
        <property name="eachLine" value="false"/>
    </module>

    <module name="TreeWalker">
        <!-- Desactiva error por constructor público en clase utilitaria -->
        <!-- (No se activa si no está aquí, pero por si acaso...) -->
        <!-- No incluimos HideUtilityClassConstructorCheck -->

        <!-- Ignorar métodos sin javadoc -->
        <module name="MissingJavadocMethodCheck">
            <property name="scope" value="private"/>
            <property name="allowMissingPropertyJavadoc" value="true"/>
        </module>

        <!-- No obligar a que los parámetros sean final -->
        <!-- Se omite FinalParametersCheck -->

        <!-- Puedes agregar más reglas si quieres -->
    </module>
</module>